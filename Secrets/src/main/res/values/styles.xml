<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="FragmentGroupInfoSharingItem">
        <item name="android:background">@drawable/state_selector_background</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">56.0dip</item>
    </style>

    <style name="FragmentGroupInfoSharingItemIcon">
        <item name="android:padding">1.0dip</item>
        <item name="android:layout_width">48.0dip</item>
        <item name="android:layout_height">48.0dip</item>
    </style>

    <style name="FragmentGroupInfoSharingItemText">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ff333333</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="FragmentGroupInfoSharingItemText.Subdued" parent="@FragmentGroupInfoSharingItemText">
        <item name="android:textColor">#ff666666</item>
    </style>

    <style name="FragmentGroupInfoSharingItemText.Indent" parent="@FragmentGroupInfoSharingItemText">
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">5.0dip</item>
    </style>

    <style name="FragmentGroupInfoSharingItemText.Indent.SectionTitle" parent="@style/FragmentGroupInfoSharingItemText.Indent">
        <item name="android:textColor">#ff666666</item>
        <item name="android:layout_marginTop">20.0dip</item>
    </style>

    <style name="FragmentGroupInfoSharingItemSeparator">
        <item name="android:background">@color/fragment_group_info_horizontal_rule</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0dip</item>
    </style>

    <style name="FragmentGroupInfoSharingItemSeparator.Thick" parent="@FragmentGroupInfoSharingItemSeparator">
        <item name="android:layout_height">2.0dip</item>
    </style>

    <style name="FragmentGroupInfoPinningSwitchText">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="SingleLine">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MultiLine">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="PasswordDetailText">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/secret_list_entry_padding</item>
        <item name="android:paddingBottom">@dimen/secret_list_entry_padding</item>
    </style>
</resources>
