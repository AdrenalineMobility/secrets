<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="FragmentGroupInfoSharingItem">
        <item name="android:background">@drawable/state_selector_background</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">56.0dip</item>
    </style>

    <style name="FragmentGroupInfoSharingItemIcon">
        <item name="android:padding">1.0dip</item>
        <item name="android:layout_width">48.0dip</item>
        <item name="android:layout_height">48.0dip</item>
    </style>

    <style name="FragmentGroupInfoSharingItemText">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ff333333</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="FragmentGroupInfoSharingItemText.Subdued" parent="@FragmentGroupInfoSharingItemText">
        <item name="android:textColor">#ff666666</item>
    </style>

    <style name="FragmentGroupInfoSharingItemText.Indent" parent="@FragmentGroupInfoSharingItemText">
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">5.0dip</item>
    </style>

    <style name="FragmentGroupInfoSharingItemText.Indent.SectionTitle" parent="@style/FragmentGroupInfoSharingItemText.Indent">
        <item name="android:textColor">#ff666666</item>
        <item name="android:layout_marginTop">20.0dip</item>
    </style>

    <style name="FragmentGroupInfoSharingItemSeparator">
        <item name="android:background">@color/fragment_group_info_horizontal_rule</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0dip</item>
    </style>

    <style name="FragmentGroupInfoSharingItemSeparator.Thick" parent="@FragmentGroupInfoSharingItemSeparator">
        <item name="android:layout_height">2.0dip</item>
    </style>

    <style name="FragmentGroupInfoPinningSwitchText">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="SingleLine">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MultiLine">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="PasswordDetailText">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">right</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:paddingTop">@dimen/secret_list_entry_padding</item>
        <item name="android:paddingBottom">@dimen/secret_list_entry_padding</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="EditorTitleStyle">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">textCapSentences|textAutoCorrect|textMultiLine</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
    </style>

    <style name="EditorTextStyle">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/list_entry_content_text</item>
        <item name="android:textColorLink">@color/primary_text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:autoLink">all</item>
        <item name="android:linksClickable">false</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:inputType">textCapSentences|textAutoCorrect|textMultiLine</item>
        <item name="android:imeOptions">flagNoExtractUi|actionNext</item>
    </style>

    <style name="EditorDividerStyle">
        <item name="android:paddingBottom">4.0dip</item>
        <item name="android:background">@drawable/dotted_line</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="EditorFooterStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/editor_content_padding</item>
        <item name="android:paddingBottom">@dimen/editor_content_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
