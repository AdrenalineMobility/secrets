<?xml version="1.0" encoding="utf-8"?>
<io.adrenaline.secrets.views.NoteSecretEntryRelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/secret_entry_root"
    android:focusable="true"
    android:nextFocusLeft="@+id/secret_name"
    android:nextFocusRight="@+id/edit_secret"
    android:clickable="true"
    android:longClickable="true"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/secret_list_entry_padding"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".GroupDetailActivity">

    <include layout="@layout/secret_list_entry" />

    <FrameLayout
        android:id="@+id/secret_details"
        android:visibility="gone"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/secret_icon"
        android:layout_alignLeft="@id/secret_icon">

        <TextView
            android:textSize="@dimen/details_text_size"
            android:textColor="@color/list_entry_secondary_text"
            android:id="@+id/secret_note"
            android:padding="@dimen/note_padding"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textIsSelectable="true"
            style="@style/MultiLine" />

    </FrameLayout>

</io.adrenaline.secrets.views.NoteSecretEntryRelativeLayout>