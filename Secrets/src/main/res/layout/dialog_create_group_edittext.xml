<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/group_name_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_edittext_margin"
        android:layout_marginLeft="@dimen/dialog_edittext_margin"
        android:layout_marginRight="@dimen/dialog_edittext_margin"
        android:layout_marginBottom="@dimen/dialog_edittext_bottom_margin"
        android:fontFamily="sans-serif"
        android:hint="@string/group_name" />
</LinearLayout>
