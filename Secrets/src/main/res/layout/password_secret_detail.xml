<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/password_detail"
    android:layout_width="match_parent"
    android:padding="@dimen/note_padding"
    android:orientation="vertical"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:textColor="@color/primary_text"
            android:text="@string/editor_website_hint"
            style="@style/SingleLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/website_field"
            android:textColor="@color/secondary_text"
            android:textIsSelectable="true"
            android:ellipsize="middle"
            android:autoLink="web"
            android:linksClickable="true"
            style="@style/PasswordDetailText" />
    </LinearLayout>

    <View
        android:id="@+id/up_separator"
        style="@style/FragmentGroupInfoSharingItemSeparator" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:textColor="@color/primary_text"
            android:text="@string/username"
            style="@style/SingleLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/username_field"
            android:textColor="@color/secondary_text"
            android:textIsSelectable="true"
            style="@style/PasswordDetailText" />
    </LinearLayout>

    <View
        android:id="@+id/up_separator"
        style="@style/FragmentGroupInfoSharingItemSeparator" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:textColor="@color/primary_text"
            android:text="@string/password"
            style="@style/SingleLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/password_field"
            android:textColor="@color/secondary_text"
            android:textIsSelectable="true"
            style="@style/PasswordDetailText" />
    </LinearLayout>

</LinearLayout>